%tr
  %td= student.first_name
  %td= student.last_name
  %td= student.decorate.formatted_birthdate
  %td
    = link_to student_path(student), { class: 'btn btn-default', title: t('shared.show') } do
      = fa_icon "search"
    = link_to edit_student_path(student), { class: 'btn btn-default', title: t('shared.edit') } do
      = fa_icon "edit"
    = link_to student_path(student), { class: 'btn btn-default', method: :delete, title: t('shared.delete') } do
      = fa_icon "times"
    = link_to student_subjects_path(student), { class: 'btn btn-default', title: t('shared.show_subject_items') } do
      = fa_icon "list"
